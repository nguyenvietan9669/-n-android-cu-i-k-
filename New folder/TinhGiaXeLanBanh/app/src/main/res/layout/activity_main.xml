<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính Giá Xe Lăn Bánh"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá Xe:"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/edt_gia_xe"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/border"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại Xe:"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="90dp"
            android:background="@android:drawable/btn_dropdown"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="Địa phương đăng kí biển số xe:"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:background="@android:drawable/btn_dropdown"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tit_gia_dam_phan"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá Đàm Phán:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_gia_dam_phan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tit_phi_truoc_ba"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí Trước Bạ(10%):"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_phi_truoc_ba"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí Sử Dụng Đường Bộ(1 năm):"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_phi_duong_bo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảo Hiểm Trách Nhiện Dân Sự:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_bh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí Đăng Kí Biển Số:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_bs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí Đăng Kiểm:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_pdk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Cộng:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_tong_cong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Số Tiền Phải Trả Khi Lăn Bánh Là"
        android:textSize="20sp"
        android:layout_marginHorizontal="50dp"/>
    <TextView
        android:id="@+id/tv_tong_cong_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="140dp"/>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btn_tinh_toan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:text="Tính Toán"
        android:textStyle="bold"
        android:textAlignment="center"
        />

</LinearLayout>